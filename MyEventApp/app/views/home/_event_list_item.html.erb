<%= link_to (url_for({:controller => "events", :action => "show", :id => event.id})), {:class => "list-group-item link_container"} do %>
	<div class="event_li_top">
		<p class="event_title">
			<%= event.name %>
		</p>
		<p class="event_time">
			<%= event.start.strftime("%l:%M%P") %> - <%= event.end.strftime("%l:%M%P") %>
		</p>
	</div>
	<div class="event_li_bottom">
		<p><%= event.description %></p>
	</div>
<% end %>
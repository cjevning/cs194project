<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap-theme.min.css">
<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>
<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>

<div class="divisor">
	<p class="diviP">Invitations</p>
 </div>
 <div class="panel-group" id="accordion1">
<% @invitations.each do |invite| %>
  <div class="panel panel-default accHeight">
    <div class="panel-heading override">
      <table class="override" data-toggle="collapse" data-parent="#accordion1" href="#collapse<%=invite.id%>">
        <tr class="override">
          <td class="rowName override" id="row<%=invite.id%>">
            <div class="override itemName">
              <p class="diviP"><%= invite.name %></p>
            </div>
          </td>
          <td class="dropDown">
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div id="collapse<%=invite.id%>" class="panel-collapse collapse">
    <div class="panel-body">
      <p class="event_time">
		<%= invite.start.strftime("%l:%M%P") %> - <%= invite.end.strftime("%l:%M%P") %>
	  </p>
	  <%= invite.description %>
    </div>
  </div>
<% end %>
</div>

<style>
.override {
  padding: 0px;
  margin: 0px;
  min-height: 7vh;
  width: 100%;
  background-image: none;

}
.panel {
  margin: 0px;
}

.panel-group {
	margin-left: -10px;
	width: 100vh;
}

.panel-group .panel+.panel {
	margin: 0px;
}

.divisor {
	width: 100vh;
	margin-left: -10px;
	background-color: rgb(128, 128, 128);
}

.diviP {
	margin: 0px;
	margin-left: 10px;
}

</style>

